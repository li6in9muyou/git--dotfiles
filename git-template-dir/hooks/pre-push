#!/bin/bash

HOOK_DIR="$(dirname "$0")"

echo "#   git--dotfiles/hooks/pre-push"

any_failed=false
for hook in "$HOOK_DIR"/*.pre-push.sh; do
    if [ -x "$hook" ]; then
        if ! "$hook" "$@"; then
          echo -e "\033[31mFailed: $(basename $hook)\033[0m"
            any_failed=true
        fi
    fi
done

# If any hook has failed, exit with a non-zero status
if [ "$any_failed" = true ]; then
    echo -e "\033[31m#   Aborted\033[0m"
    exit 1
fi

exit 0
